                            customAttr:onBackground="@drawable/switch_on"
                            customAttr:onText="@string/turn_on"
                            customAttr:onTextColor="#fff"
                            customAttr:switchState="true"
                            customAttr:textSize="12sp" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/divider" />

                    <RelativeLayout
                        android:id="@+id/auto_update_layout"
                        android:layout_width="fill_parent"
