<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/app_del_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
         /><!-- android:src="@drawable/ic_launcher" -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/app_del_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxWidth="120dp"
            android:text="app_1"
            android:textColor="#1C1C1C"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/app_del_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="80dp"
                android:text="@string/app_version"
                android:textColor="@drawable/gainsboro"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/app_del_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0.0"
                android:textColor="@drawable/gainsboro"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/app_del_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="80dp"
                android:text="@string/app_size"
                android:textColor="@drawable/gainsboro"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/app_del_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.0M"
                android:textColor="@drawable/gainsboro"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
    
   	<Button 
   	    android:id="@+id/delete"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_gravity="center"
   	    android:gravity="center"
   	    android:text="@string/app_delete"/>

</LinearLayout>