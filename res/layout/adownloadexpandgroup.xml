<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="35dip"
    android:orientation="horizontal"
    android:background="#e9e9e9"
    android:gravity="center_vertical"
    android:descendantFocusability="blocksDescendants" >

    <TextView
        android:id="@+id/tvExpandGroupTitle"
        android:layout_width="0dip"
        android:layout_height="35dip"
        android:gravity="center_vertical"
        android:textColor="#485361"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dip" 
        android:layout_weight="1.0"/>

    <Button
        android:id="@+id/btnOneKeyUpdate"
        android:layout_width="80dip"
        android:layout_height="25dip"
        android:singleLine="true"
        android:gravity="center"
        android:text="@string/onekeyupdate"
        android:layout_marginRight="10dip"
        android:textColor="#000"
        android:background="@drawable/install_button_selector"  />

    <ImageView
        android:id="@+id/ivExpandGroupPic"
        android:layout_width="15dip"
        android:layout_height="8dip"
        android:src="@drawable/pic_down"
        android:gravity="center_vertical"
        android:layout_marginRight="10dip"  />

</LinearLayout>