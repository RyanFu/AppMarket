                        android:paddingTop="10dp"
                        android:text="@string/del_pkg"
                        android:textColor="#3b3b3b"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/divider"
