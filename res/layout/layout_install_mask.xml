<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/installmasklayout" 
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:visibility="gone" >
	<View 
		android:layout_width="fill_parent"
		android:layout_height="100dip"
		android:background="@drawable/mask_bg" />
	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="30dip" >
		<View 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1.0"
			android:background="@drawable/mask_bg" />
		<View 
			android:layout_width="168dip"
			android:layout_height="fill_parent"/>
		<View 
			android:layout_width="7dip"
			android:layout_height="fill_parent"
			android:background="@drawable/mask_bg" />
	</LinearLayout>
	<LinearLayout 
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1.0"
		android:background="@drawable/mask_bg"
		android:gravity="right" >
		<View 
			android:layout_width="20dip"
			android:layout_height="30dip"
			android:layout_marginRight="110dip"
			android:background="@drawable/soft_backup_arrow" />
		<View 
			android:layout_width="fill_parent"
			android:layout_height="45dip"
			android:background="@drawable/soft_backup_text_mask" />
	</LinearLayout>
</LinearLayout>