<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/softmovemasklayout"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:visibility="gone" >
    <View 
    	android:layout_width="fill_parent"
    	android:layout_height="52dip"
    	android:background="@drawable/mask_bg" />
    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="40dip">
    	<View 
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:layout_weight="1.0"
    		android:background="@drawable/mask_bg" />
    	<View 
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:layout_weight="2.1" />
    	<View 
    		android:layout_width="3dip"
    		android:layout_height="fill_parent"
    		android:background="@drawable/mask_bg" />
    </LinearLayout>
    <LinearLayout 
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_weight="1.0"
    	android:background="@drawable/mask_bg" >
    	<View 
    		android:layout_width="20dip"
    		android:layout_height="25dip"
    		android:layout_marginRight="30dip"
    		android:layout_marginTop="3dip"
    		android:layout_gravity="right"
    		android:background="@drawable/soft_move_top_arrows" />
    	<LinearLayout 
    		android:layout_width="fill_parent"
    		android:layout_height="40dip"
    		android:layout_marginTop="5dip">
    		<View 
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:layout_weight="1.5" />
    		<View 
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:layout_weight="1.0"
    			android:layout_marginRight="4dip"
    			android:background="@drawable/soft_move_top_text" />
    	</LinearLayout>
    	<View 
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:layout_weight="1.0" />
    	<LinearLayout 
    		android:layout_width="fill_parent"
    		android:layout_height="80dip">
    		<LinearLayout 
    			android:orientation="vertical"
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:layout_weight="1.0"
    			android:paddingLeft="12dip"
    			android:paddingRight="18dip"
    			android:gravity="center_horizontal" >
    			<View 
    				android:layout_width="fill_parent"
    				android:layout_height="40dip"
    				android:background="@drawable/soft_move_bottom_text1" />
    			<View 
    				android:layout_width="20dip"
    				android:layout_height="25dip"
    				android:layout_marginTop="5dip"
    				android:background="@drawable/soft_move_bottom_arrows1" />
    		</LinearLayout>
    		<LinearLayout 
    			android:orientation="vertical"
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:layout_weight="1.0"
    			android:paddingLeft="10dip"
    			android:paddingRight="15dip"
    			android:gravity="center_horizontal" >
    			<View 
    				android:layout_width="fill_parent"
    				android:layout_height="40dip"
    				android:background="@drawable/soft_move_bottom_text2" />
    			<View 
    				android:layout_width="20dip"
    				android:layout_height="25dip"
    				android:layout_marginTop="5dip"
    				android:background="@drawable/soft_move_bottom_arrows2" />
    		</LinearLayout>
    	</LinearLayout>
    </LinearLayout>
    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="42dip">
    	<View 
    		android:layout_width="20dip"
    		android:layout_height="fill_parent"
    		android:background="@drawable/mask_bg" />
    	<View 
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:layout_weight="1.0" />
    	<View 
    		android:layout_width="40dip"
    		android:layout_height="fill_parent"
    		android:background="@drawable/mask_bg" />
    	<View 
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:layout_weight="1.0" />
    	<View 
    		android:layout_width="20dip"
    		android:layout_height="fill_parent"
    		android:background="@drawable/mask_bg" />
    </LinearLayout>
</LinearLayout>
