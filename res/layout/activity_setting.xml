                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/last_flow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/default_flow"
                                    android:textColor="#888"
                                    android:textSize="14sp" />

